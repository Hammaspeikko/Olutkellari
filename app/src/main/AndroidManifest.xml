<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bignerdranch.android.olutkellari">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ArvosteleOlutActivity" />
        <activity android:name=".ProfiiliActivity" />
        <activity android:name=".SelaaOluita" />
        <activity
            android:name=".SkannaaActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Aseta viivakoodi keskelle ruutua"
            android:theme="@style/FullscreenTheme" />
        <activity android:name=".ArvosteluValintaActivity" />
        <activity android:name=".HaeViivakoodillaActivity" />
    </application>

</manifest>